{
  "name": "web-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "ANALYZE=true next build",
    "build": "PWA=true next build",
    "build-docker": "rm -f -r .next && docker-compose build",
    "prod": "PWA=false next build && yarn start",
    "dev": "NODE_ENV=development PORT=3001 next dev",
    "lint": "prettier --check . && eslint . --ext .js,.jsx,.ts,.tsx && tsc --noEmit",
    "lint-fix": "prettier --write . && eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "start": "next start",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "validate": "yarn lint && yarn test:ci",
    "generate-themes": "node scripts/generate-themes.js && yarn lint-fix"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@next/bundle-analyzer": "^12.0.1",
    "@rematch/core": "^2.2.0",
    "@rematch/immer": "^2.1.3",
    "@rematch/persist": "^2.1.2",
    "clsx": "^1.1.1",
    "daisyui": "^1.21.0",
    "immer": "^9.0.7",
    "lodash": "^4.17.21",
    "next": "12.0.7",
    "next-pwa": "^5.4.4",
    "react": "17.0.2",
    "react-datepicker": "^4.5.0",
    "react-dom": "17.0.2",
    "react-redux": "^7.2.6",
    "react-scroll": "^1.8.4",
    "redux-persist": "^6.0.0",
    "theme-change": "^2.0.2"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.0.1",
    "@tailwindcss/forms": "^0.4.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/lodash": "^4.14.176",
    "@types/node": "16.11.6",
    "@types/react": "17.0.33",
    "@types/react-datepicker": "^4.3.4",
    "@types/react-scroll": "^1.8.3",
    "@types/tailwindcss": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "autoprefixer": "^10.4.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "12.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.0.0",
    "jest": "^27.4.5",
    "postcss": "^8.4.5",
    "prettier": "2.5.1",
    "sass": "^1.45.2",
    "tailwindcss": "^3.0.8",
    "typescript": "4.4.4"
  }
}
