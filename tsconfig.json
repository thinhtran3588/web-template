{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@locales/*": ["src/locales/*"],
      "@main/*": ["src/modules/main/*"],
      "@settings/*": ["src/modules/settings/*"],
      "@store": ["src/store"],
      "@test/*": ["__tests__/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "scripts/tailwind-color-classes-generator.js"]
}
